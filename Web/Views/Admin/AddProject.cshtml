                                        <table style="box-shadow:0" class="mb-0 table table-borderless">
                                            <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Name</th>
                                                <th>Email</th>
                                                <th>Hours</th>
                                                <th>Remove</th>
                                            </tr>
                                            </thead>
                                            <tbody>
                                            <tr v-for="(drw,index) in drawings " :key="drw.id">
