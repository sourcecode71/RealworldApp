@{
    string currentName = "";
    string currentRole = "";
    byte[] currentRoleByte;
    byte[] currentNameByte;

    if (Context.Session.Keys.Count() > 0)
    {
        Context.Session.TryGetValue("current_user_role", out currentRoleByte);
        Context.Session.TryGetValue("current_user_name", out currentNameByte);

        if(currentRoleByte != null && currentNameByte != null)
        {
            currentRole = System.Text.Encoding.Default.GetString(currentRoleByte);
            currentName = System.Text.Encoding.Default.GetString(currentNameByte);
        }
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/sweetalert2/dist/sweetalert2.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/assets/main.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="Stylesheet" type="text/css" href="https://code.jquery.com/ui/1.11.4/themes/start/jquery-ui.css" />



</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" style="text-align: left;width: 15%;" asp-area="" asp-controller="Home" asp-action="Index"><img src="/img/logo.png" width="100%"/> </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse justify-content-between">
                    @if (!string.IsNullOrEmpty(currentRole))
                    {
                        <ul class="navbar-nav">
                            <li style="padding-right: 20px">
                                <p class="nav-link text-dark" style="margin-top: 10px">Welcome <b class="text-primary">@currentName</b>!</p>
                            </li>
                            <li class="nav-item" style="padding-right: 20px; margin-top: 10px">
                                <form class="form-inline" action="/Home/Logout" method="post">
                                    <button type="submit" class="nav-link btn btn-sm btn-link btn-danger text-light">Logout</button>
                                </form>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <ul class="navbar-nav">
                            <li class="nav-item" style="padding-right: 20px; margin-top: 10px">
                                <form class="form-inline" action="/Home/Login" method="get">
                                    <button type="submit" class="nav-link btn btn-sm btn-link btn-primary text-light">Login</button>
                                </form>
                            </li>
                        </ul>
                    }
                <ul class="navbar-nav flex-grow-1 col-md-8">
                    @if (currentRole == "Admin")
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/Index">Admin</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/AddEmployee">Add Employee</a>
                        </li>

                     
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Project
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">  
                              <a class="dropdown-item" href="/Admin/AddProject">Add Project</a>
                              <a class="dropdown-item" href="/project/projectActivities">Project Budget</a>
                              <a class="dropdown-item" href="/company/hourlogs">Hour Log </a>
                              <div class="dropdown-divider"></div>
                            
                            </div>
                          </li>


                            <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                              Work Order
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">  
                               <a class="dropdown-item" href="/project/projectWorkOrder">Create Work Order</a>
                                 <a class="dropdown-item" href="/company/invoice">
                                    Payment and Invoice 
                                 </a>
                            </div>
                          </li>

                          <li class="nav-item dropdown">
                               <a class="dropdown-item" href="/company">Company setup</a>
                          </li>

                           <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/GenerateReports">Reports</a>
                        </li>
                          <li class="nav-item">
                            <a class="nav-link text-dark" href="/Admin/Archived">Archived</a>
                        </li>
                    }
                    @if (currentRole == "Employee")
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" href="/Employee/Index">Dashboard</a>
                            </li>
                        }
                </ul>
                </div>
            </div>
        </nav>


    </header>
    <div class="container">
             <main role="main" class="pb-3">
                @RenderBody()
            </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Project Management App
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script type="text/javascript" src="https://code.jquery.com/ui/1.11.4/jquery-ui.min.js"></script>
    <script src="/lib/sweetalert2/dist/sweetalert2.all.min.js"></script>

    <script src="~/op/plexo.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
  <script>
     $(document).ready(function(){
        $('.dropdown-toggle').dropdown()
    });
</script>
</body>
</html>
